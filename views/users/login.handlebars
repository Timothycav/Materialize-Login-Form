<div class="row">
<h1>{{title}}</h1>

    <form class="col s12">


        <div class="row">
            <div class="input-field col s6">
                <input id="email" type="email" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input id="password" type="password" class="validate">
                <label for="password">Password</label>

            </div>

        </div>
        <div class="row">
            <div class="col s6">
                <button class="btn waves-effect waves-light btn-large red lighten-2" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>

            </div>
        </div>



    </form>
</div>